<%= form_with(model: vote, class: "contents") do |form| %>
  <% if vote.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(vote.errors.count, "error") %> prohibited this vote from being saved:</h2>

      <ul>
        <% vote.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :is_valid %>
    <%= form.check_box :is_valid, class: "block mt-2 h-5 w-5" %>
  </div>
   <audio controls="true" width="100%" preload="metadata">
      <source src= <%= rails_blob_url(@clip.audio) %>, type=<%= @clip.audio.content_type %> >
    </audio>
  <div class="my-5">
    <%= form.hidden_field :clip_id, value: @clip.id ,class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
