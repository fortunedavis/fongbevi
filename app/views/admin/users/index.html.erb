<div class="bg-gray-100 py-5 px-6">
  <table class="table-fixed w-full">
    <thead>
      <tr class="bg-gray-200">
        <th class="w-1/3 py-2 px-4 text-left">Email</th>
        <th class="w-1/3 py-2 px-4 text-left">Clip Count</th>
        <th class="w-1/3 py-2 px-4 text-left">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="<%= cycle('bg-gray-100', '') %>">
          <td class="py-2 px-4"><%= user.email %></td>
          <td class="py-2 px-4"><%= user.clips.count %></td>
          <td class="py-2 px-4">
            <%= link_to "Edit", edit_user_registration_path(user), class: "text-blue-600 underline mr-2" %>
            <%= link_to "Delete", destroy_session_path(user), method: :delete, data: { confirm: "Are you sure you want to delete #{user.email}?" }, class: "text-red-600 underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
