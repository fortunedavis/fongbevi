<div id="<%= dom_id sentence %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Fon:</strong>
    <%= sentence.content_fon %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Fran√ßais:</strong>

    <%= sentence.content_fr %>
  </p>


  <p class="my-5">
    <strong class="block font-medium mb-1">Has valid clips:</strong>
    <%= sentence.has_valid_clips %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this sentence", admin_sentence_path(sentence), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
