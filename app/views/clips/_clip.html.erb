<div id="<%= dom_id clip %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Is valid:</strong>
    <%= clip.is_valid %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Need votes:</strong>
    <%= clip.need_votes %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this clip", clip, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this clip', edit_clip_path(clip), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
